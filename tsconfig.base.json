{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@template/application-auth": ["libs/application/auth/src/index.ts"],
      "@template/application-user": ["libs/application/user/src/index.ts"],
      "@template/domain-shared": ["libs/domain/shared/src/index.ts"],
      "@template/domain-user": ["libs/domain/user/src/index.ts"],
      "@template/infrastructure-auth": ["libs/infrastructure/auth/src/index.ts"],
      "@template/infrastructure-database": ["libs/infrastructure/database/src/index.ts"],
      "@template/infrastructure-messaging": ["libs/infrastructure/messaging/src/index.ts"],
      "@template/presentation-auth": ["libs/presentation/auth/src/index.ts"],
      "@template/presentation-shell": ["libs/presentation/shell/src/index.ts"],
      "@template/presentation-user-admin": ["libs/presentation/user-admin/src/index.ts"],
      "@template/shared-types": ["libs/shared/types/src/index.ts"],
      "@template/shared-ui": ["libs/shared/ui/src/index.ts"],
      "@template/shared-utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
